import pyaudio


FORMAT = pyaudio.paFloat32
CHANNELS = 1
RATE = 44100
CHUNK = 1024
RECORD_SECONDS = 5
WAVE_OUTPUT_FILENAME = "dtmf.wav"


audio_src = pyaudio.PyAudio()

def audio():
    stream = audi_src.open(format=pyaudio.paFloat32, channels=1, rate=44100, output=1,frames_per_buffer=CHUNK)

def main():
    audio()
    return
    audio_src = pyaudio.PyAudio()
    audio_devs = audio_src.get_device_count()

    for i in range(audio_devs):
        dev_info = audio_src.get_device_info_by_index(i)
        print(dev_info["name"])


if __name__ == "__main__":
    main()
    print("running soundcard file.")
